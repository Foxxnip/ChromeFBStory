{
  "manifest_version": 2,
  "name": "Chrome FB Story",
  "description": "Chrome extension that lets you view your friends' Facebook Stories in the browser.",
  "version": "1.0.0",
  "background": {
    "scripts": [
      "event.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Chrome FB Story",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [],
      "js": ["content.js"]
    }
  ]
}
